*{
	text-decoration: none;
	margin: 0px;
	padding: 0px;
}

body{
	margin:0px;
	padding: 0px;
	font-family: "open sans", sans-serif;
	background-image:url("perpus2.jpg");
	background-size:cover;
}

.wrap{
	width:1100px;
	margin:auto;
	position:relative;
}

.logo a{
	font-size: 60px;
	font-weight: bold;
	float: left;
	font-family: courier;
	color: #94DAFF;
	margin:0px;
}

.menu{
	float: right;
}

nav{
	width:100%;
	margin:0;
	display:flex;
	line-height:80px;
	position:stiky;
	position:-webkit-sticky;
	top:50px;
	background:#323232;
	z-index:10000;
}

nav ul{
	list-style-type:none;
	margin:0;
	padding:0;
	overflow:hidden;
}

nav ul li{
	float:left;
	
}

nav ul li a{
	font-weight:bold;
	text-align:center;
	padding:0px 20px 0px 20px;
	text-decoration: none;
}

nav ul li a:hover{
	text-decoration:underline;
	text-decoration-color:blue;
	color:red;
	
}


